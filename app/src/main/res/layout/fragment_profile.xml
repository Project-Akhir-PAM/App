<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".profile.profileFragment">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="#EFEFEF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/group_3"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/user_silhouette__1__1"
        android:elevation="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="nama"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/envelope__3__2"
        android:elevation="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="email"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/locked_padlock_1"
        android:elevation="20dp"
        android:padding="10dp"
        android:password="true"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        tools:text="password"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/tvTelephone"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/telephone_handle_silhouette_2"
        android:elevation="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvPassword"
        tools:text="telephone"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/male_1"
        android:elevation="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvTelephone"
        app:layout_constraintTop_toBottomOf="@+id/tvTelephone"
        tools:text="gender"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/tvBirthdate"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/calender"
        android:elevation="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvGender"
        app:layout_constraintTop_toBottomOf="@+id/tvGender"
        tools:text="birthdate"
        android:textAlignment="textStart" />


</androidx.constraintlayout.widget.ConstraintLayout>