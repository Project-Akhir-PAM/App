<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.fragment_editProfile">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:srcCompat="@drawable/group_3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/group_205" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="name"
        android:padding="5dp"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:startIconDrawable="@drawable/user_silhouette__1__1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_nama"
            android:layout_width="315dp"
            android:layout_height="37dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="email"
        android:padding="5dp"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="@+id/tb_nama"
        app:layout_constraintTop_toBottomOf="@+id/tb_nama"
        app:startIconDrawable="@drawable/envelope__3__2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_email"
            android:layout_width="315dp"
            android:layout_height="37dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="password"
        android:padding="5dp"
        app:endIconMode="password_toggle"
        app:layout_constraintStart_toStartOf="@+id/tb_email"
        app:layout_constraintTop_toBottomOf="@+id/tb_email"
        app:startIconDrawable="@drawable/locked_padlock_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_password"
            android:layout_width="315dp"
            android:layout_height="37dp"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="telephone"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/tb_password"
        app:layout_constraintTop_toBottomOf="@+id/tb_password"
        app:prefixText="+62"
        app:prefixTextColor="@color/purple_500"
        app:startIconDrawable="@drawable/telephone_handle_silhouette_2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_telephone"
            android:layout_width="315dp"
            android:layout_height="37dp"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_gender"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="gender"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_telephone"
        app:startIconDrawable="@drawable/male_1">

        <AutoCompleteTextView
            android:id="@+id/act_gender"
            android:layout_width="315dp"
            android:layout_height="37dp"
            android:inputType="none"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_text"
        android:elevation="20dp"
        android:hint="birthdate"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/tb_gender"
        app:layout_constraintTop_toBottomOf="@+id/tb_gender"
        app:startIconDrawable="@drawable/calender">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_birthdate"
            android:layout_width="315dp"
            android:layout_height="37dp"
            android:inputType="datetime" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btUpload"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/bg_bt_upload"
        android:backgroundTint="@color/green"
        android:text="Upload"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_birthdate" />

</androidx.constraintlayout.widget.ConstraintLayout>