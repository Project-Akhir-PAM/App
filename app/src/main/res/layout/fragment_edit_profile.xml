<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.EditProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_firstname"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="Firstname"
        android:padding="5dp"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:startIconDrawable="@drawable/user_silhouette__1__1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_firstname"
            android:layout_width="315dp"
            android:layout_height="42dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_lastname"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="Lastname"
        android:padding="5dp"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="@+id/tb_firstname"
        app:layout_constraintTop_toBottomOf="@+id/tb_firstname"
        app:startIconDrawable="@drawable/user_silhouette__1__1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_lastname"
            android:layout_width="315dp"
            android:layout_height="42dp"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_telephone"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_iet"
        android:elevation="20dp"
        android:hint="telephone"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/tb_lastname"
        app:layout_constraintTop_toBottomOf="@+id/tb_lastname"
        app:startIconDrawable="@drawable/telephone_handle_silhouette_2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_telephone"
            android:layout_width="315dp"
            android:layout_height="42dp"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spGender"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_gender"
        android:drawableStart="@drawable/user_silhouette__1__1"
        android:elevation="20dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/tb_telephone"
        app:layout_constraintTop_toBottomOf="@+id/tb_telephone" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tb_birthdate"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_text"
        android:elevation="20dp"
        android:hint="birthdate"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/spGender"
        app:layout_constraintTop_toBottomOf="@+id/spGender"
        app:startIconDrawable="@drawable/calender">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TIET_birthdate"
            android:layout_width="315dp"
            android:layout_height="42dp"
            android:inputType="datetime" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btUpload"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_bt_upload"
        android:text="Upload"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_birthdate" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4" />


</androidx.constraintlayout.widget.ConstraintLayout>